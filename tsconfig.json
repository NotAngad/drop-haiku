{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // or "ESNext" if using import/export
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
